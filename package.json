{
  "name": "@lukso/lsp-factory.js",
  "version": "1.1.2",
  "description": "Helper Library to allow simple deployments of LSP3UniversalProfiles and LSP4DigitalCertificates",
  "main": "build/main/src/index.js",
  "typings": "build/main/src/index.d.ts",
  "module": "build/module/src/index.js",
  "repository": "https://github.com/lukso-network/tools-lspFactory",
  "license": "MIT",
  "keywords": [],
  "scripts": {
    "build": "npm run generate-types && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:lint": "eslint src --ext .ts --fix",
    "test": "run-s test:unit",
    "test:unit": "HARDHAT_VERBOSE=true DEBUG=true NODE_NO_WARNINGS=1 jest --coverage",
    "check-cli": "run-s test diff-integration-tests check-integration-tests",
    "check-integration-tests": "run-s check-integration-test:*",
    "diff-integration-tests": "mkdir -p diff && rm -rf diff/test && cp -r test diff/test && rm -rf diff/test/test-*/.git && cd diff && git init --quiet && git add -A && git commit --quiet --no-verify --allow-empty -m 'WIP' && echo '\\n\\nCommitted most recent integration test output in the \"diff\" directory. Review the changes with \"cd diff && git diff HEAD\" or your preferred git diff viewer.'",
    "watch:build": "tsc -p tsconfig.json -w",
    "watch:test": "HARDHAT_VERBOSE=true DEBUG=true NODE_NO_WARNINGS=1 jest --watch",
    "doc": "run-s doc:html && open-cli build/docs/index.html",
    "doc:html": "typedoc --out build/docs",
    "doc:json": "typedoc --json build/docs/typedoc.json",
    "docs:generate:markdown": "typedoc --options typedoc.json --out testdocs",
    "doc:publish": "gh-pages -m \"[ci skip] Updates\" -d build/docs",
    "version": "standard-version",
    "reset-hard": "git clean -dfx && git reset --hard && npm i",
    "prepare-release": "run-s reset-hard test cov:check doc:html version doc:publish",
    "generate-types": "run-p generate-types:ethers-v5 generate-types:web3-v1",
    "generate-types:ethers-v5": "typechain --target ethers-v5 --out-dir 'types/ethers-v5' './node_modules/@lukso/universalprofile-smart-contracts/build/artifacts/*.json'",
    "generate-types:web3-v1": "typechain --target web3-v1 --out-dir 'types/web3-v1' './node_modules/@lukso/universalprofile-smart-contracts/build/artifacts/*.json'"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@erc725/erc725.js": "^0.6.2-beta.4",
    "@ethersproject/abi": "5.5.0",
    "@ethersproject/experimental": "5.5.0",
    "@lukso/universalprofile-smart-contracts": "0.2.2",
    "@typechain/web3-v1": "^3.1.0",
    "axios": "^0.23.0",
    "browser-image-compression": "^1.0.15",
    "ethers": "5.5.0",
    "ipfs-http-client": "52.0.3",
    "ipfs-utils": "8.1.6",
    "rxjs": "^7.3.0"
  },
  "devDependencies": {
    "@ethereum-waffle/jest": "^3.3.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@typechain/ethers-v5": "7.0.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.4.0",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "codecov": "^3.5.0",
    "cspell": "^4.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.12.24",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "gh-pages": "^3.2.3",
    "hardhat": "^2.6.2",
    "jest": "^27.1.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "prettier": "^2.3.2",
    "standard-version": "^9.3.1",
    "ts-node": "^10.2.1",
    "typechain": "5.1.2",
    "typedoc": "^0.22.7",
    "typedoc-neo-theme": "^1.1.1",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.3.5",
    "wait-on": "6.0.0",
    "web3": "^1.5.2"
  },
  "files": [
    "build/main",
    "build/module",
    "!**/*.spec.*",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
